{% extends "base.j2" %}

{% block title %}Prompt Templates{% endblock %}

{% block content %}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-4xl font-bold text-base-950">Prompt Templates</h1>
    </div>

    {% if templates %}
    <div class="row">
        {% for template in templates %}
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">
                        <span class="material-icons text-primary">description</span>
                        {{ template.name|title }}
                    </h5>
                    <p class="card-text flex-grow-1">{{ template.description }}</p>

                    <div class="mt-auto">
                        <small class="text-muted d-block">
                            <span class="material-icons">person</span> {{ template.author }}
                        </small>
                        {% if template.variables %}
                        <small class="text-muted d-block mb-2">
                            <span class="material-icons">local_offer</span> Variables: {{ template.variables|join(', ')
                            }}
                        </small>
                        {% endif %}

                        <a href="#" class="btn btn-primary btn-sm w-100" disabled>
                            <span class="material-icons">play_arrow</span> Use Template (Coming Soon)
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="text-center py-5">
        <span class="material-icons text-7xl text-gray-500">search</span>
        <h3 class="text-muted mt-3">No Templates Found</h3>
        <p class="text-muted">Create some .jinja2 files in the prompts/blueprints directory.</p>
    </div>
    {% endif %}

    <div class="w-full max-w-sm p-4 bg-white border border-gray-200 rounded-lg shadow-sm sm:p-8">
        <h5 class="mb-4 text-xl font-medium text-gray-500">Standard plan</h5>
